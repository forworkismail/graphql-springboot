scalar Date

type Query {
    pets: [Pet]
    owners: [Person]
    favoritePet(ownerId: String!): Pet
    petsByOwner(ownerId: String!): [Pet]
    pet(id: ID!): Pet
}

type Mutation {
    updatePetName(id: ID!, name: String): UpdatePetNamePayload
}

type UpdatePetNamePayload {
    pet: Pet
}

type Pet {
    id: ID!
    name: String
    owner: Person
    dateOfBirth: Date
}

type Person {
    firstName: String
    lastName: String
}